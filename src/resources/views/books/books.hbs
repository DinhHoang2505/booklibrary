<div class="wrap-inner p-3">
    <div class="container">
        <h2 class="create_book-title">Tổng sách hiện có: {{books.length}}</h2>
        <div class="row">
            {{#each books}}
            <div class="col-xs-6 col-sm-4 col-md-3 col-xl-2 mb-3 p-1">
                <div class="card card-book">
                    <div class="card-img-top">
                        <a href="books/{{this.slug}}">
                            <img class="mg-1 card-img" src="{{this.image}}" alt="Book title">
                        </a>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title">
                            <a href="books/{{this.slug}}">
                                {{this.name}}
                            </a>
                        </h1>
                        <p class="card-text mb-2">{{this.author}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="container">
                <h1 class="create_book-title">
                    Add books to the store
                </h1>
                <div class="create_book-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512">
                        <title>Arrow Down</title>
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                            stroke-width="48" d="M112 268l144 144 144-144M256 392V100" />
                    </svg>
                </div>
                <a href="/books/create" id="create">
                    <button class="btn btn-primary btn-lg">Create Book</button>
                </a>
            </div>
        </div>
    </div>
</div>
<h1>Create Book</h1>
<div class="wrap-inner">
    <div class="container">
        <div class="form-inner">
            <form method="POST" action="/books/store">
                <div class="form-group" action="/books/store">
                    <label for="bookTitle">Book Title: </label>
                    <input type="text" class="form-control" id="bookTitle" name="name" aria-describedby="bookHelp"
                        required="true" placeholder="Book Title...">
                </div>
                <div class="form-group">
                    <label for="bookAuthor">Author: </label>
                    <input type="text" class="form-control" id="bookAuthor" required="true" name="author"
                        placeholder="Author...">
                </div>
                <div class="form-group">
                    <label for="bookThumb">Thumbnail: </label>
                    <input type="text" class="form-control" id="bookThumb" required="true" name="image"
                        placeholder="Thumbnail...">
                </div>
                <div class="form-group">
                    <label for="bookPrice">Price: </label>
                    <input type="text" class="form-control" id="bookPrice" required="true" name="price"
                        placeholder="Price...">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-lg">Create Book</button>
                </div>
            </form>
        </div>
    </div>
</div>
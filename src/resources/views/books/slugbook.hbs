<div class="wrap-inner p-3">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-xl-6 mb-3 p-1">
                <div class="card card-book">
                    <div class="card-img-top">
                        <img class="mg-1 card-img" src="{{book.image}}" alt="Book title">
                    </div>
                    <div class="card-body">
                        <h1 class="card-title">
                            {{book.name}}
                        </h1>
                        <p class="card-text mb-2">{{book.author}}</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="container">
                    <h4>Tác giả: {{book.author}}</h4>
                    <h1>{{book.name}}</h1>
                    <hr>
                    <h3>Price: {{book.price}}</h3>
                </div>
            </div>
        </div>
    </div>
</div>